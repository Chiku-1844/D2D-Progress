#include <iostream>
using namespace std;
int main()
{
    int n = 41000;
    int rev =0;
    while(n>0)
    {
      int last =0;
      last = n%10;
      rev = rev*10 + last;
      n = n/10;
      
    }
    
    cout << rev;
}
